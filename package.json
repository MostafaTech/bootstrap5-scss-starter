{
  "name": "bootstrap-scss-starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "css-compile": "sass styles/main.scss dist/styles.css",
    "css-prefix": "postcss --replace dist/styles.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css dist/styles.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output dist/",
    "css-clean": "cleancss --batch --batch-suffix .min dist/*.css !dist/*.min.css --source-map",
    "css": "npm-run-all css-compile css-prefix css-purge css-clean",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@popperjs/core": "^2.11.2",
    "bootstrap": "^5.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "clean-css-cli": "^5.5.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "purgecss": "^4.1.3",
    "sass": "^1.49.7",
    "serve": "^13.0.2"
  }
}
